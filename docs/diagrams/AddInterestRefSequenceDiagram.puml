@startuml
!include style.puml
skinparam SequenceReferenceBackgroundColor White
box Logic LOGIC_COLOR_T1
participant ":AddInterest\nCommand" as AddInterestCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant ":Person" as Person MODEL_COLOR
end box

group sd Add Interest
[-> AddInterestCommand : execute()
activate AddInterestCommand

AddInterestCommand -> Model: getFilteredPersonList()
activate Model
Model --> AddInterestCommand: ObservableList<Person>
deactivate Model

AddInterestCommand -> Person: get(1)
activate Person
Person --> AddInterestCommand: personToEdit
deactivate Person

AddInterestCommand -> Person: addInterest("anime")
activate Person
Person --> AddInterestCommand
deactivate Person


AddInterestCommand -> Model: updateFilteredPersonList()
activate Model
Model --> AddInterestCommand
deactivate Model

[<--AddInterestCommand
deactivate AddInterestCommand
end
@enduml
